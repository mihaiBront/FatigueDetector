{
    "python.pythonPath": ".venv/bin/python", // Path to the virtual environment
    "python.envFile": "${workspaceFolder}/.env", // Path to .env file
    "editor.formatOnSave": true,
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true
    },
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./tests",
        "-p",
        "*test*.py",
        "test_*"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": true
}